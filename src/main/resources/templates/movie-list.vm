<!--中间的轮播栏-->
<div class="container-fluid" style="margin-top:80px;">
    <div class="row">
        <header id="myCarousel" class="carousel slide">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <a href="$data.firstHead.href">
                        <img class="img-responsive"
                             src="$data.firstHead.url"/>
                    </a>

                    <div class="carousel-caption">
                    </div>
                </div>
                <div class="item">
                    <a href="$data.secondHead.href">
                        <img class="img-responsive"
                             src="$data.secondHead.url"/>
                    </a>

                    <div class="carousel-caption">
                    </div>
                </div>
                <div class="item">
                    <a href="$data.thirdHead.href">
                        <img class="img-responsive"
                             src="$data.thirdHead.url"/>
                    </a>

                    <div class="carousel-caption">
                    </div>
                </div>
            </div>
            <!-- Controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="icon-prev"></span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="icon-next"></span>
            </a>
        </header>
    </div>
</div>

<!--中间影片-->
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <!--前面需要加箭头-->
            <h4 class="page-header" style="font-size:27px;font-weight: bold;">热映影片</h4>
        </div>

        #foreach($single in $data.filmList)
            <div class="col-md-3 col-sm-6" style="margin-top:30px;">
                <div style="box-shadow: 0 1px 14px 0 rgba(0,0,0,0.37)">
                    <figure class="effect-zoe">
                        <img  src="$single.url"/>
                        <figcaption>
                            <h3>$single.title</h3>
                            <p>$single.text</p>
                            <a href="$single.href">查看更多</a>
                        </figcaption>
                    </figure>
                </div>
            </div>
        #end

    </div>

    <div class="row">
        <div class="col-lg-12">
            <h4 class="page-header" style="font-size:27px;font-weight: bold;">挚友资讯</h4>
        </div>

        #foreach($single in $data.articleList)
            <div class="col-lg-12" style="margin-top:50px;">
                <div class="col-md-4 col-sm-6">
                    <div style="box-shadow: 0 1px 14px 0 rgba(0,0,0,0.37)">
                        <a href="$single.href">
                            <img class="img-responsive img-portfolio img-hover"
                                 src="$single.url" >
                        </a>
                    </div>
                </div>
                <div class="col-md-8 col-sm-6" style="height: 200px;">
                    <div class="news-title">
                        <a href="$single.href">
                            $single.title
                        </a>
                    </div>
                    <div class="news-time">
                            $single.date
                    </div>
                    <div class="news-content">
                        <p>
                            $single.desc
                        </p>
                    </div>
                    <div class="news-bottom">
                        <a href="$single.href">
                            更多
                        </a>
                    </div>
                </div>
            </div>
        #end

    </div>
</div>

