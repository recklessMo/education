<script src="js/waterfall.min.js"></script>
<script>
    $('#container-fluid').waterfall({
        itemCls: 'single-item',
        colWidth: 192,
        gutterWidth: 0,
        gutterHeight: 0,
        checkImagesLoaded: false,
        maxPage: 1,
        path: function(page) {
            return 'data' + page + '.js';
        }
    });
</script>

